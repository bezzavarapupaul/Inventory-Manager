{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./out-tsc/app",
    "types": [],
    "moduleResolution": "bundler"   // ✅ important for Angular 18
  },
  "files": [
    "src/main.ts"                    // ✅ explicitly tell Angular entry file
  ],
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "src/**/*.spec.ts",              // ✅ avoid test file conflicts
    "server.ts",
    "main.server.ts",
    "app.config.server.ts"
  ]
}
